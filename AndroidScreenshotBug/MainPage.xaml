<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndroidScreenshotBug.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Android screenshot issue" />

            <Label Style="{StaticResource SubHeadline}" Text="Take a screenshot here in android and notice it gives a black image" />

            <Button
                Clicked="OpenModalClicked"
                HorizontalOptions="Fill"
                Text="View modal page" />

            <Button
                Clicked="OpenNonModalClicked"
                HorizontalOptions="Fill"
                Text="View non modal page" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
